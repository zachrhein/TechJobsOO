@model TechJobs.ViewModels.SearchJobsViewModel

@{
    // TODO #2.1- declare the ViewModel (outside of this @{ } block)
}

@{
    // TODO #2.2 - display the job fields, one per row (outside of this @{ } block)
}

<h1>@Model.Title</h1>

@if (Model.Jobs != null)
{

<h3>@Model.Jobs.Count Result(s)</h3>

@foreach (var job in Model.Jobs)
    {
    <table class="job-listing">
        <tr>
            <td>Name</td>
            <td>@job.Name</td>
        </tr>
        <tr>
            <td>Employer</td>
            <td>@job.Employer</td>
        </tr>
        <tr>
            <td>Location</td>
            <td>@job.Location</td>
        </tr>
        <tr>
            <td>Skill</td>
            <td>@job.CoreCompetency</td>
        </tr>
        <tr>
            <td>Position Type</td>
            <td>@job.PositionType</td>
        </tr>
    </table>
    }
}